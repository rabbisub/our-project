<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFDEDE"
    android:orientation="vertical"
    tools:context=".PActivity">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Phosphorus"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"

        >

    </TextView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:gravity="center">
                    <TextView
                        android:text="General properties"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:gravity="center"

                        />
                </TableRow>

                <TableRow
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:text="Apperance:"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:gravity="right"

                        />

                    <TextView
                        android:layout_height="match_parent"
                        android:gravity="left"
                        android:paddingLeft="10dp"
                        android:text="white, red and violet are waxy, black is metallic-looking"
                        android:textColor="@color/black"

                        android:textSize="20sp" />
                </TableRow>
                <TableRow
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:text="Standard atomic weight(Ar):"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:gravity="right"

                        />
                    <TextView
                        android:paddingLeft="10dp"
                        android:text="30.973761998(5)"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:gravity="center"

                        />
                </TableRow>
                <TableRow
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:text="Atomic number (Z):"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:gravity="right"

                        />
                    <TextView
                        android:paddingLeft="10dp"
                        android:text="15"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:gravity="center"

                        />
                </TableRow>
                <TableRow
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:text="Group, Period:"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:gravity="right"

                        />
                    <TextView
                        android:paddingLeft="10dp"
                        android:text="group 15,period 3"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:gravity="center"

                        />
                </TableRow>
                <TableRow
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:text="Block:"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:gravity="right"

                        />
                    <TextView
                        android:paddingLeft="10dp"
                        android:text="p-block"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:gravity="center"

                        />
                </TableRow>
                <TableRow
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:text="Element category:"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:gravity="right"

                        />
                    <TextView
                        android:paddingLeft="10dp"
                        android:text="polyatomic nonmetal"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:gravity="center"

                        />
                </TableRow>
                <TableRow
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:text="Electron configuration:"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:gravity="right"

                        />
                    <TextView
                        android:text="[Ne] 3s^ 3p^3"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:gravity="center"

                        />
                </TableRow>
                <TableRow
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:text="Electrons per shell:"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:gravity="right"

                        />
                    <TextView
                        android:paddingLeft="10dp"
                        android:text="	2, 8, 5"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:gravity="center"

                        />
                </TableRow>


            </TableLayout>
        </HorizontalScrollView>
    </ScrollView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:src="@drawable/p" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="waxy white (yellow cut), red (granules centre left, chunk centre right), and violet phosphorus"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="For more information"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/pBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Click here"
        android:textSize="20sp" />

</LinearLayout>